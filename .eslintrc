{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb-typescript",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/extensions": [
      ".js",
      ".ts",
      ".jsx",
      ".tsx"
    ],
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      },
    }
  },
  "rules": {
    "@typescript-eslint/indent": [
      "off"
    ],
    "react/prop-types": "off",
    "arrow-parens": [
      "error",
      "always"
    ],
    "prettier/prettier": [
      "error"
    ],
    "import/no-named-as-default": [
      "off"
    ]
  }
}